<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name ="text_tip" parent="AppTheme">
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:textSize">@dimen/tip_text_size</item>
        <item name ="android:padding">@dimen/padding_standard</item>
        <item name ="android:textAlignment">center</item>
        <item name = "android:layout_gravity">center_vertical|center_horizontal</item>
        <item name ="android:layout_weight">1</item>
        <item name ="android:textColor">@color/colorAccent</item>
    </style>

    <style name ="button_tip" parent="AppTheme">
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">@dimen/button_height_size</item>
        <item name ="android:textSize">@dimen/contact_text_size</item>
        <item name ="android:paddingTop">@dimen/padding_standard</item>
        <item name ="android:paddingBottom">@dimen/padding_half</item>
        <item name ="android:paddingStart">@dimen/padding_half</item>
        <item name ="android:paddingEnd">@dimen/padding_standard</item>
        <item name ="android:textAlignment">center</item>
        <item name = "android:layout_gravity">center_vertical|center_horizontal</item>
        <item name ="android:layout_weight">1</item>

        <item name ="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name ="contacts" parent="AppTheme">
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:textSize">@dimen/contact_text_size</item>
        <item name ="android:paddingBottom">@dimen/padding_half</item>
        <item name ="android:paddingStart">@dimen/padding_half</item>
        <item name ="android:paddingEnd">@dimen/padding_half</item>
        <item name ="android:textAlignment">center</item>
        <item name = "android:layout_gravity">center_vertical|center_horizontal</item>
        <item name ="android:layout_weight">1</item>
        <item name ="android:textColor">@color/colorPrimary</item>
    </style>

    <style name ="landscape_text_tip" parent="AppTheme">
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:textSize">@dimen/tip_text_size</item>
        <item name ="android:padding">@dimen/padding_half</item>
        <item name ="android:textAlignment">center</item>
        <item name = "android:layout_gravity">center_vertical|center_horizontal</item>
        <item name ="android:layout_weight">1</item>
        <item name ="android:textColor">@color/colorAccent</item>
    </style>

    <style name ="landscape_button_tip" parent="AppTheme">
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">@dimen/landscape_button_height_size</item>
        <item name ="android:textSize">@dimen/contact_text_size</item>
        <item name ="android:paddingTop">@dimen/padding_half</item>
        <item name ="android:paddingBottom">@dimen/padding_half</item>
        <item name ="android:paddingStart">@dimen/padding_half</item>
        <item name ="android:paddingEnd">@dimen/padding_half</item>
        <item name ="android:textAlignment">center</item>
        <item name = "android:layout_gravity">center_vertical|center_horizontal</item>
        <item name ="android:layout_weight">1</item>

        <item name ="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name ="landscape_contacts" parent="AppTheme">
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:textSize">@dimen/contact_text_size</item>
        <item name ="android:paddingBottom">@dimen/padding_half</item>
        <item name ="android:paddingStart">@dimen/padding_half</item>
        <item name ="android:paddingEnd">@dimen/padding_half</item>
        <item name ="android:textAlignment">center</item>
        <item name = "android:layout_gravity">center_vertical|center_horizontal</item>
        <item name ="android:layout_weight">1</item>
        <item name ="android:textColor">@color/colorPrimary</item>
    </style>











</resources>